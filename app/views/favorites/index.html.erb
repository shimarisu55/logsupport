<div class="container">
	<h2 class="page-header">お気に入りリスト</h2>
	<div class="row mb-2"><% @favorites.each do |favorite| %>
	    <div class="col-md-6 col-lg-4">
	        <div class="card flex-md-row mb-4 box-shadow h-md-300">
	            <div class="card-body d-flex flex-column align-items-start">
	        		<% if favorite.blog.tag  == "意見文" %>
	        		<strong class="d-inline-block mb-2 text-warning"><%= favorite.blog.tag  %>
	        		</strong>
	                <% else %>
	                <strong class="d-inline-block mb-2 text-success"><%= favorite.blog.tag  %>
	                </strong>
	                <% end %>
	        		<ul class="list-inline float-left">
	                	</li>
		                <li class="list-inline-item label bg-secondary">
		                	著者：<%= favorite.blog.author %>
	                	</li>
						<li class="list-inline-item label bg-secondary">
							出典：<%= favorite.blog.source %>
						</li>
						<li class="list-inline-item label bg-secondary">
							問題集：<%= favorite.blog.book %>
						</li>
					</ul>
	                <h3 class="mb-0">
	                    <div class="text-dark media-heading mb-2">
	                    		<%= link_to blog_path(favorite.blog), class:"text-dark" do %>
	                    		<% favorite.blog.header %><% end %>
	            		</div>
	                </h3>
	                <p class="card-text mb-3">
	                	<ul class="list-inline">
	                	    <li class="list-inline-item">主張　</li>
	                	    <li class="list-inline-item"><%= favorite.blog.claim1 %></li>
	                	</ul>
	                	<ul class="list-inline">
	                	    <li class="list-inline-item">対比軸</li>
	                	    <li class="list-inline-item"><%= favorite.blog.claim2 %></li>
	                	</ul>
	            	</p>
	            	<ul class="list-inline text-right">
	            		<% if favorite.blog.favorited_by?(current_user) %>
	            			<li class="list-inline-item fa fa-heart" aria-hidden="true" style="color: red;">
	                            <%= favorite.blog.favorites.count %></li>
						<% else %>
				      		<li class="list-inline-item fa fa-heart" aria-hidden="true">
	                            <%= favorite.blog.favorites.count %></li>
	            		<% end %>
	            		    <li class="list-inline-item fa fa-comment" aria-hidden="true">
						    <%= favorite.blog.post_comments.count %></li>
						    <li class="list-inline-item">
						    	<%= link_to 'もっと詳しく', blog_path(favorite.blog),class:"text-dark" %>
	                		</li>
	            	</ul>
	            </div>
	        </div>
	    </div><% end %>
	</div>
	<%= paginate @favorites, class: "pagenate" %>
</div>
