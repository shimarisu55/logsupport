<div class="container">
	<div class="page-header">
		<h4>
		<% if current_user == nil %>
            <i class="fa fa-heart" aria-hidden="true"></i>
		<% elsif @blog.favorited_by?(current_user) %>
		      <i class="fa fa-heart", id="favoritelink", aria-hidden="true" style="color: red;"></i>
		<% else %>
		      <i class="fa fa-heart" aria-hidden="true"></i>
		<% end %>
		<%= @blog.favorites.count %>
		</h4>
	</div>
	<% @blog.favorites.each do |favorite| %>
		<% if favorite.user == nil %>
			<div class="media comment border-bottom">
					<div class="media-left media-object mr-2 text-center block icon-size">
						<%= image_tag("no_image.jpg", class:"block icon-size") %>
					</div>
					<div class="media-body media-obfect">
						<h4 class="text-dark">
							退会済みユーザー</h4>
					</div>
				</div>
		<% else %>
			<%= link_to user_path(favorite.user) do %>
				<div class="media comment border-bottom">
					<div class="media-left media-object mr-2 text-center">
						<%= attachment_image_tag favorite.user, :image, :fill, 80,80, format: 'jpeg', class: "block icon-size", fallback: "no_image.jpg" %>
					</div>
					<div class="media-body media-obfect">
						<h4 class="text-dark">
							<%= favorite.user.name %></h4>
					</div>
				</div>
		<% end %><% end %>
	<% end %>
</div>