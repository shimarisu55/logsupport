            </div> -->
        </div>

        <div class="row">
           	 <p>見出しタイトル *必須</p>
             <%= f.text_field :header %>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-3">
                 <p>著者　*必須</p>
                 <%= f.text_field :author %>
            </div>
            <div class="col-xs-12 col-md-3">
                 <p>出典　*必須</p>
                 <%= f.text_field :source %>
            </div>
            <div class="col-xs-12 col-md-3">
                 <p>問題集</p>
                 <%= f.text_field :book %>
            </div>
        </div>

            <section class="section mb-4">
                    <div class="flex-md-row h-md-300 d-flex flex-nowrap">
                        <div class="row">
                            <div class="col-md-5 col-xs-12 order-1 order-md-1">
                                <p>主張　*必須</p>
                                <%= f.text_field :claim1 %>
                            </div>
                            <div class="col-md-5 col-xs-12 order-4 order-md-2">
                                <p>対比軸　*必須</p>
                                <%= f.text_field :claim2 %>
                            </div>

                            <div class="col-md-5 col-xs-12 order-2 order-md-3">
                                <p>根拠1</p>
                                <%= f.text_field :basis1 %>
                            </div>
                            <div class="col-md-5 col-xs-12 order-5 order-md-4">
                                <p>根拠2</p>
                                <%= f.text_field :basis2 %>
                            </div>

                            <div class="col-md-5 col-xs-12 order-3 order-md-5">
                                <p>具体例1</p>
                                <%= f.text_field :example1 %>
                            </div>
                            <div class="col-md-5 col-xs-12 order-6 order-md-6">
                                <p>具体例2</p>
                                <%= f.text_field :example2 %>
                            </div>
                        </div>
                    </div>
            </section>

