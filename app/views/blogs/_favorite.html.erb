<% if blog.favorited_by?(current_user) %>
	<%= link_to blog_favorites_path(blog.id),class: "text-dark", method: :delete,remote: true do %>
	  <i class="fa fa-heart", aria-hidden="true" style="color: red;"></i><% end %>
<% else %>
	<%= link_to blog_favorites_path(blog.id),class: "text-dark", method: :post,remote: true do %>
      <i class="fa fa-heart", aria-hidden="true"></i><% end %>
<% end %>


