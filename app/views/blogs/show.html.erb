	<div class="container">
		<div class="col-12 col-lg-8">
		  	<div class="blog-post">
		    	<h2 class="page-header">
		    		<%= @blog.header %>
	    		</h2>
		    	<div class="blog-post-meta text-right">
		    		<%= @blog.created_at %>
			  		<% if @blog.tag  == "要約文" %>
	        		<strong class="d-inline-block mb-2 text-success"><%= @blog.tag  %>
	        		</strong>
	                <% else %>
	        		<strong class="d-inline-block mb-2 text-warning"><%= @blog.tag  %>
	        		</strong>
	                <% end %>
        		</div>
        		<div class="text-right mb-3">
        			出典：<%= @blog.source %>
        		</div>
		    </div>
					<div class="flex-md-row flex-nowrap justify-content-center">
            			<div class="row">
            				<div class="col-md-6 col-12 order-1 order-md-1">
	            				<strong>主張</strong>
						   		<p><%= @blog.claim1 %></p>
						   	</div>
					   		<div class="col-md-6 col-12 order-4 order-md-2">
	    				    	<strong>対比軸</strong>
								<p><%= @blog.claim2 %></p>
							</div>

            				<div class="col-md-6 col-12 order-2 order-md-3">
	            				<strong>根拠1</strong>
	            				<% if @blog.basis1 == "" %>
	            				<p>なし</p>
	            				<% else %>
						   		<p><%= @blog.basis1 %></p>
						   		<% end %>
						   	</div>
					   		<div class="col-md-6 col-12 order-5 order-md-4">
	    				    	<strong>根拠2</strong>
	    				    	<% if @blog.basis2 == "" %>
	            				<p>なし</p>
	            				<% else %>
								<p><%= @blog.basis2 %></p>
								<% end %>
							</div>

            				<div class="col-md-6 col-12 order-3 order-md-5">
	            				<strong>具体例1</strong>
	            				<% if @blog.example1 == "" %>
	            				<p>なし</p>
	            				<% else %>
						   		<p class="border-bottom pb-2"><%= @blog.example1 %></p>
						   		<% end %>
						   	</div>
					   		<div class="col-md-6 col-12 order-6 order-md-6">
	    				    	<strong>具体例2</strong>
	    				    	<% if @blog.example2 == "" %>
	            				<p>なし</p>
	            				<% else %>
								<p class="border-bottom pb-2"><%= @blog.example2 %></p>
								<% end %>
							</div>
 						</div>
					</div>

			<section class="section2 mb-4">
					<strong>要約</strong>
					<p class="letter"><%= @blog.body %></p>
					<% if @blog.tag == "要約文" %>
						<% if @blog_option == nil %>
						<% else %>
							<%= link_to blog_path(@blog_option) do %>
								<p class="text-center text-warning"><span>意見文を読む</span>>><%= @blog_option.header %></p><% end %>
						<% end %>
					<% else %>
						<% if @blog_resume == nil %>
						<% else %>
							<%= link_to blog_path(@blog_resume) do %>
								<p class="text-center text-success"><span>要約文に戻る</span>>><%= @blog_resume.header %></p><% end %>
						<% end %>
					<% end %>
			</section>

				<div class="text-right mb-3">
					文責　<% if @blog.user == nil %>
					退会済みユーザー
					<% else %>
					<%= link_to user_path(@blog.user) do %>
					<%= @blog.user.name %><% end %>
					<% end %></br>
					<% if current_user == nil %>
                        <i class="fa fa-heart" aria-hidden="true"></i>
					      <%= link_to blog_favorites_path(@blog) do %>
					      	<%= @blog.favorites.count %><% end %>
					<% elsif @blog.favorited_by?(current_user) %>
						<%= link_to blog_favorites_path(@blog), method: :get do %>
					      <i class="fa fa-heart", id="favoritelink", aria-hidden="true" style="color: red;"></i>
					      	<%= @blog.favorites.count %><% end %>
					<% else %>
					      <i class="fa fa-heart" aria-hidden="true"></i>
					      <%= link_to blog_favorites_path(@blog) do %>
					      	<%= @blog.favorites.count %><% end %>
					<% end %>　
					<i class="fa fa-comment" aria-hidden="true"></i>
					<%= @blog.post_comments.count %>　

					<% if @blog.user == current_user %>
						<%= link_to "編集", edit_blog_path %>　
						<%= link_to "削除", blog_path(@blog), method: :delete,"data-confirm" => "本当に削除しますか"  %>
					<% end %>
				</div>
				<% if current_user == nil %>
				<% else %>
						<div class="row border">
							<div class="col-6 btn btn-default text-center text-dark">
								<% if @blog.favorited_by?(current_user) %>
							      <%= link_to blog_favorites_path(@blog),class: "text-dark", method: :delete,remote:true do %>
							      <i class="fa fa-heart", id="favorite", aria-hidden="true" style="color: red;"></i>　いいね！<% end %>
								<% else %>
							      <%= link_to blog_favorites_path(@blog),class: "text-dark", method: :post,remote:true do %>
							      <i class="fa fa-heart", id="favorite", aria-hidden="true"></i>　いいね！<% end %>
								<% end %>
							</div>
							<div class="col-6 btn btn-default text-center" id="sampleButton2">
								コメントする
							</div>
						</div>
				<% end %>

				<% @blog.post_comments.each do |post_comment| %>
				<div class="media comment border-bottom">
					<div class="media-left media-object mr-2 text-center">
						<%= link_to user_path(post_comment.user) do %>
						<%= attachment_image_tag post_comment.user, :image, :fill, 80,80, format: 'jpeg', class: "block icon-size", fallback: "no_image.jpg" %><% end %>
					</div>
					<div class="media-body media-obfect">
						<h4 class="media-heading">
							<%= link_to user_path(post_comment.user), class: "comment-name text-dark" do %>
							<%= post_comment.user.name %><% end %></h4>
						<%= post_comment.comment %></br>
						<div class="text-right comment-bottom">
							<% if post_comment.user == current_user %>
							<%= link_to "削除", blog_post_comments_path(@blog), method: :delete %>
							<% end %>
							<%= post_comment.created_at.strftime('%Y/%m/%d') %>
						</div>
					</div>
				</div>
				<% end %>
		</div>
	</div>
	

	<div class="modal fade　mt-5" id="sampleModal2" tabindex="-1">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"><span>×</span></button>
					<h4 class="modal-title"></h4>
				</div>
				<div class="modal-body">
				     <%= form_for [@blog, @post_comment] do |f| %>
				   	 <%= f.text_field :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
				     <div class="btn inline">
				     	<%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
				     </div>
				   <% end %>
				</div>
			</div>
		</div>
	</div>


	<script>
	$( function() {
		$('#sampleButton2').click( function () {
			$('#sampleModal2').modal();
		});
	});

