<div class="container">
    <div class="col-12 col-lg-8">
        <div class="blog-post">
          <h2>確認画面</h2>
          <h2 class="page-header">
            <%= @blog.header %>
          </h2>
          <div class="blog-post-meta text-right">
            <%= @blog.created_at %>
            <% if @blog.tag  == "要約文" %>
              <strong class="d-inline-block mb-2 text-success"><%= @blog.tag  %>
              </strong>
                  <% else %>
              <strong class="d-inline-block mb-2 text-warning"><%= @blog.tag  %>
              </strong>
                  <% end %>
            </div>
            <div class="text-right mb-3">
              <strong>著者：</strong><%= @blog.author %>　
              <strong>出典：</strong><%= @blog.source %></br>
            </div>
        </div>

      <%= render 'blogs/show_confirm', blog: @blog %>


      <div class="row flex">
        <%= form_for :blog, url: new_blogs_path do |f| %>
          <%= f.hidden_field :tag %>
          <%= f.hidden_field :group_id %>
          <%= f.hidden_field :user_id %>
          <%= f.hidden_field :header %>
          <%= f.hidden_field :author %>
          <%= f.hidden_field :source %>
          <%= f.hidden_field :book %>
          <%= f.hidden_field :claim1 %>
          <%= f.hidden_field :claim2 %>
          <%= f.hidden_field :basis1 %>
          <%= f.hidden_field :basis2 %>
          <%= f.hidden_field :example1 %>
          <%= f.hidden_field :example2 %>
          <%= f.hidden_field :body %>
          <%= f.submit '入力画面へ戻る', class:"btn btn-secondary" %>
        <% end %>

        <%= form_for :blog, url: blogs_path do |f| %>
        　<%= f.hidden_field :tag %>
          <%= f.hidden_field :group_id %>
          <%= f.hidden_field :user_id %>
          <%= f.hidden_field :header %>
          <%= f.hidden_field :author %>
          <%= f.hidden_field :source %>
          <%= f.hidden_field :book %>
          <%= f.hidden_field :claim1 %>
          <%= f.hidden_field :claim2 %>
          <%= f.hidden_field :basis1 %>
          <%= f.hidden_field :basis2 %>
          <%= f.hidden_field :example1 %>
          <%= f.hidden_field :example2 %>
          <%= f.hidden_field :body %>
          <%= f.submit '登録する', class:"btn btn-secondary" %>
        <% end %>
      </div>
    </div>
</div>